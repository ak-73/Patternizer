<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="4.22"?>
<plugin>

   <extension point="org.eclipse.ui.commands">
      <category
            id="de.kalinowski.patternizer.commands.category"
            name="Sample Category">
      </category>
      
      <command
            categoryId="de.kalinowski.patternizer.commands.category"
            name="Singleton (Class)"
            id="de.kalinowski.patternizer.patterns.Singleton">
      </command>
      <command
            categoryId="de.kalinowski.patternizer.commands.category"
            name="Builder"
            id="de.kalinowski.patternizer.patterns.Builder">
      </command>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="de.patternizer.eclipse.patterns._InsertPatternHandler"
            commandId="de.kalinowski.patternizer.patterns.Singleton">
      </handler>
      <handler
            class="de.patternizer.eclipse.patterns._InsertPatternHandler"
            commandId="de.kalinowski.patternizer.patterns.Builder">
      </handler>
   </extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:#CompilationUnitEditorContext?after=org.eclipse.jdt.ui.source.menu">
            <menu label="Insert Design Pattern">
                <command style="push"
                         commandId="de.kalinowski.patternizer.patterns.Singleton" />
                <command style="push"
                         commandId="de.kalinowski.patternizer.patterns.Builder" />
            </menu>
        </menuContribution>
   </extension>

</plugin>
